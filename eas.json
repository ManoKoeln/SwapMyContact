{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assemblePlayRelease"
      }
    },
    "production": {
      "autoIncrement": false,
      "hooks": {
        "preBuild": "./eas-hooks/eas-build-pre-build.sh"
      },
        "ios": {
          "image": "macos-sequoia-15.6-xcode-26.1"
        },
      "android": {
        "gradleCommand": ":app:bundlePlayRelease"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "ascAppId": "6755888866"
      }
    }
  }
}
